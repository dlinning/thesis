{
    "trigger": [
        { "type": "number|text|time", "comparison": "==|!=|>=|<=", "value": "" },
        { "type": "number|text|time", "comparison": "==|!=|>=|<=", "value": "" }
    ],

    "sends": [
        {
            "type": "sensor",

            "data": {
                "toSensor": "sensorId",
                "payload": "payload",
                "payloadType": "payloadType(custom)"
            }
        },
        {
            "type": "group",

            "data": {
                "toGroup": "groupId",
                "payload": "payload",
                "payloadType": "payloadType(custom)"
            }
        },
        {
            "type": "email",

            "data": {
                "toEmail": "emailAddress",
                "subject": "emailSubject",
                "body": "emailBody"
            }
        },
        {
            "type": "twilio",

            "data": {
                "toNumber": "phoneNumber",
                "body": "messageBody"
            }
        }
    ]
}
